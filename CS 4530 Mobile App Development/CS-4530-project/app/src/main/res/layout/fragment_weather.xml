<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="16dp">

        <ImageView
            android:id="@+id/iv_sun"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sun" />

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_sun"
            app:layout_constraintTop_toTopOf="@+id/iv_sun"
            app:layout_constraintBottom_toBottomOf="@+id/iv_sun"
            android:text="Temperature" />

        <ImageView
            android:id="@+id/iv_press"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintTop_toBottomOf="@+id/iv_sun"
            app:srcCompat="@drawable/air_press" />

        <TextView
            android:id="@+id/tv_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_press"
            app:layout_constraintTop_toTopOf="@+id/iv_press"
            app:layout_constraintBottom_toBottomOf="@+id/iv_press"
            android:text="Pressure" />

        <ImageView
            android:id="@+id/iv_purple_cloud"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintTop_toBottomOf="@+id/iv_press"
            app:srcCompat="@drawable/purple_cloud" />

        <TextView
            android:id="@+id/tv_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_purple_cloud"
            app:layout_constraintTop_toTopOf="@+id/iv_purple_cloud"
            app:layout_constraintBottom_toBottomOf="@+id/iv_purple_cloud"
            android:text="Overcast" />

        <ImageView
            android:id="@+id/iv_wind"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintTop_toBottomOf="@+id/iv_purple_cloud"
            app:srcCompat="@drawable/wind" />

        <TextView
            android:id="@+id/tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_wind"
            app:layout_constraintTop_toTopOf="@+id/iv_wind"
            app:layout_constraintBottom_toBottomOf="@+id/iv_wind"
            android:text="Wind" />

        <ImageView
            android:id="@+id/iv_humidity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintTop_toBottomOf="@+id/iv_wind"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/humidity" />

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_humidity"
            app:layout_constraintTop_toTopOf="@+id/iv_humidity"
            app:layout_constraintBottom_toBottomOf="@+id/iv_humidity"
            android:text="Humidity" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>